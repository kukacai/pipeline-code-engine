{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apikeyDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
        "v-type": "api-key"
      }
    },
    "registry-region": {
      "description": {
        "$ref": "#/messages/deploy.registryRegionDescription"
      },
      "type": "string",
      "disabled": false,
      "validator": {
        "v-type": "k8s-region",
        "params": [
          "api-key"
        ]
      }
    },
    "registry-namespace": {
      "description": {
        "$ref": "#/messages/deploy.registrynsDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
      "validator": {
        "v-type": "k8s-registry-namespace",
        "params": [
          "registry-region"
        ],
        "validate": false
      }
    },
    "app-name": {
      "description": {
        "$ref": "#/messages/deploy.appDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9_]"
    },
    "code-engine-project": {
      "description": {
        "$ref": "#/messages/deploy.codeEngineProjectDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
        "v-type": "ce-project-list",
        "params": [
          "code-engine-region", 
          "code-engine-resource-group"
        ],
        "validate": false
      }
    },
    "code-engine-region": {
      "description": {
        "$ref": "#/messages/deploy.codeEngineRegionDescription"
      },
      "type": "string",
      "disabled": false,
      "validator": {
        "v-type": "k8s-region",
        "params": [
          "api-key"
        ]
      }
    },
    "code-engine-resource-group": {
      "description": {
        "$ref": "#/messages/deploy.codeEngineResourceGroupDescription"
      },
      "type": "string",
      "validator": {
        "v-type": "resource-group",
        "params": [
          "api-key"
        ]
      }
    }
  },
  "required": [
    "app-name",
    "api-key",
    "registry-region",
    "registry-namespace",
    "code-engine-project",
    "code-engine-region",
    "code-engine-resource-group"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/validator/validator-v1.html"
    },
    {
      "type": "notification",
      "display": {
         "style": "info",
         "subtitle": {
            "$ref": "#/messages/deploy.notification"
         }
      }
   },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.appName"
      },
      "key": "app-name"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apikey"
      },
      "key": "api-key"
    },
    {
      "type": "select",
      "key": "code-engine-resource-group",
      "readonly": true,
      "title": {
        "$ref": "#/messages/deploy.rg"
      }
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": [
        "50%",
        "3%",
        "47%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.containerregRegion"
          },
          "tooltip": {
            "$ref": "#/messages/deploy.codeengine.cr"
         }
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.containerregns"
          },
          "tooltip": {
            "$ref": "#/messages/deploy.icr.ns"
         }
        },
        {
          "type": "select",
          "title": {
            "$ref": "#/messages/deploy.containerregRegion"
          },
          "key": "registry-region"
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "select",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.containerregns"
          },
          "key": "registry-namespace"
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": [
        "50%",
        "3%",
        "47%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.codeEngineRegionTitle"
          },
          "tooltip": {
            "$ref": "#/messages/deploy.codeengine.region"
         }

        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.codeEngineProjectTitle"
          },
          "tooltip": {
            "$ref": "#/messages/deploy.codeengine.project"
         }

        },
        {
          "type": "select",
          "key": "code-engine-region",
          "readonly": true
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "select",
          "key": "code-engine-project",
          "readonly": false
        }
      ]
    }
  ]
}
